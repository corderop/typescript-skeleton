{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["google", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "ignorePatterns": ["dist/*"],
  "plugins": ["@typescript-eslint"],
  "rules": {
    "quotes": ["error", "double"],
    "semi": ["error", "never"],
    "require-jsdoc": ["off"]
  }
}
